#ifndef STM32F4_H
#define STM32F4_H

#include <string>
#include <cstdint>
#include <boost/asio.hpp>
#include <iostream>

#include "../Utilities/SerialInterface.h"

class STM32F4
{
public:
	enum TorqueState { TorqueOff, TorqueOn };

	STM32F4(std::string portName, boost::asio::io_service& io);
	~STM32F4();
	void setMotor(uint id, uint value);

	void setTorque(uint id, TorqueState state);

	int read(uint id);

private:
	SerialInterface _usb;
};

#endif // STM32F4_H
